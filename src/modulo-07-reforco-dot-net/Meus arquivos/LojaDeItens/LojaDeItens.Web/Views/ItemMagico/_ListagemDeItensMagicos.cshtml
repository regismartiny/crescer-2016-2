@model LojaDeItens.Web.Models.ItemMagico.ItemMagicoListagemViewModel
@using LojaDeItens.Web.Models.ItemMagico

@{
    string ultimaPaginaAttr = Model.UltimaPagina ? "true" : "";
}

<style>
    .icon{
        padding-left: 20px;
    }
</style>

<table class="table table-striped" data-ultima-pagina="@ultimaPaginaAttr" id="@Model.GridId">
    <thead>
        <tr>
            <th>#</th>
            <th>Id</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (ItemMagicoParaListaViewModel item in Model.Itens)
            {
                <tr>
                    <td>
                        <span class="icons">
                            @if (item.PodeEditar)
                            {
                                @*<a href="/ItemMagico/Editar?id=1">Editar</a>*@
                                @*Html.ActionLink("Editar", "Editar", "ItemMagico", new { id = item.Id, @class = "icon glyphicon glyphicon-edit" }, null)*@

                                <a title="Editar" class="action" href="~/ItemMagico/Editar/@item.Id">
                                    <span class="icon glyphicon glyphicon-edit"></span>
                                </a>

                            }

                            @*<button onclick="itemMagicoIndex.excluir(@item.Id) class = "icon glyphicon glyphicon-trash"">Excluir</button>*@
                            <a title="Excluir" id="btn-excluir-item" href="#" data-id-item="@item.Id" class="action">
                                <span class="icon glyphicon glyphicon-trash"></span>
                            </a>
                       </span>
                    </td>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                </tr>
            }
        }
    </tbody>
</table>

